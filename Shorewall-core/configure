declare -A params
declare -A options

getfileparams() {
    while read option; do
	case $option in
	    \#*)
		;;
	    *)
		on=${option%=*}
		ov=${option#*=}
		ov=${ov%#*}
		[ -n "$on" ] && options[${on}]="${ov}"
		;;
	esac

    done
    
    return 0
}

if [ $# -eq 0 ]; then
    echo "Usage: $0 <var>=<val> ..." >&2
    exit 1
fi

for p in $@; do
    p=${p#--}

    if [ -n "${p}" ]; then
	declare -u pn

	pn=${p%=*}
	pv=${p#*=}

	if [ -n "${pn}" ]; then
	    case ${pn} in
		VENDOR)
		    pn=HOST
		    ;;
		SHAREDSTATEDIR)
		    pn=VARDIR
		    ;;
		DATADIR)
		    pn=SHAREDIR
		    ;;
		SYSCONFDIR)
		    pn=CONFDIR
		    ;;
	    esac
    
	    params[${pn}]="${pv}"
	fi
    fi
done

vendor=${params[HOST]}

if [ -z "$vendor" ]; then
    rcfile=shorewallrc.default
    vendor=linux
else
    rcfile=shorewallrc.$vendor
fi

getfileparams < $rcfile || exit 1

for p in ${!params[@]}; do
    options[${p}]="${params[${p}]}"
    options[${p}]="${params[${p}]}"
done

echo "HOST=$vendor" > shorewallrc

for on in \
    PREFIX \
    SHAREDIR \
    LIBEXECDIR \
    PERLLIBDIR \
    CONFDIR \
    SBINDIR \
    MANDIR \
    INITDIR \
    INITSOURCE \
    INITFILE \
    AUXINITSOURCE \
    AUXINITFILE \
    SYSTEMD \
    SYSCONFFILE \
    SYSCONFDIR \
    ANNOTATED \
    VARDIR
do
    echo "$on=${options[${on}]}" >> shorewallrc
done

cat shorewallrc
