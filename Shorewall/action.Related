DEFAULTS DROP

?begin perl;

use strict;
use Shorewall::IPAddrs;
use Shorewall::Config;
use Shorewall::Chains;
use Shorewall::Rules;

my ( $action ) = get_action_params( 1 );

if ( my $check = check_state( 'RELATED' ) ) {
    perl_action_helper( $action, $check == 1 ? state_match( 'RELATED' ) : '', 'RELATED' );
}

1;

?end perl;
