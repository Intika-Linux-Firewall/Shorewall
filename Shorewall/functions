LIBVERSION=30192

[ -n "${VARDIR:=/var/lib/shorewall}" ]
[ -n "${SHAREDIR:=/usr/share/shorewall}" ]
[ -n "${CONFDIR:=/etc/shorewall}" ]

SHOREWALL_LIBRARY=Loaded

if [ $# -gt 0 ]; then
    #
    # Load a specific set of libraries
    #
    for lib in $@; do
	. ${SHAREDIR}/lib.${lib}
    done
else
    for lib in ${SHAREDIR}/lib.*; do
	case $lib in
	    ${SHAREDIR}/lib.\*)
	        echo "   ERROR: ${SHAREDIR}/lib.\* not found" >&2
	        exit 2
	    ;;
	    *)
		. $lib
		;;
	esac
    done
fi
